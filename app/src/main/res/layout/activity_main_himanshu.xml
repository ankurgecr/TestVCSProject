<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.ankurpandya.testvcsproject.MainActivityHimanshu">

    <TextView
        android:id="@+id/txtPrefs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Data:"
        android:textSize="18sp"
        android:textColor="#212121"/>

    <Button
        android:id="@+id/storeinformation"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showinformation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Store Information"
        android:textColor="@android:color/black"/>
        <!--android:background="@drawable/my_button_bg_h"-->


    <Button
        android:id="@+id/showinformation"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Show Information"
        android:textColor="@android:color/black" />
        <!--android:background="@drawable/my_button_bg_h"-->


    <EditText
        android:id="@+id/input_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#212121"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="202dp" />



    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="104dp"
        android:padding="10dp"
        android:text="Save"
        android:textColor="@android:color/black"
        />
        <!--android:background="@drawable/my_button_bg_h"-->


    <Button
        android:id="@+id/btnReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-210dp"
        android:layout_marginBottom="104dp"
        android:padding="10dp"
        android:text="Reload"
        android:textColor="@android:color/black"/>

    <!--android:background="@drawable/my_button_bg_h"-->

</RelativeLayout>